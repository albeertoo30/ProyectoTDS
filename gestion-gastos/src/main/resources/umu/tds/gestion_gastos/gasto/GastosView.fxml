<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns:fx="http://javafx.com/fxml" 
            fx:controller="umu.tds.gestion_gastos.vista.gasto.ControladorGastosView"
            stylesheets="@/umu/tds/gestion_gastos/estilos/app.css">

    <!-- ▬▬▬▬▬▬▬▬▬ TOP: TÍTULO Y NAVEGACIÓN ▬▬▬▬▬▬▬▬▬ -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #f4f4f4;">
            <Label text="Gastos" styleClass="label-titulo"/>
            
            <!-- Spacer para empujar los botones a la derecha -->
            <Region HBox.hgrow="ALWAYS"/>
            
            <!-- Botones de navegación -->
            <Button fx:id="btnCategorias" text="Categorías" 
                    styleClass="button, boton-info"
                    onAction="#onIrACategorias"/>
            <Button fx:id="btnNotificaciones" text="Notificaciones" 
                    styleClass="button, boton-info"
                    onAction="#onIrANotificaciones"/>
            
            <padding>
                <Insets top="20" bottom="20" left="20" right="20"/>
            </padding>
        </HBox>
    </top>

    <!-- ▬▬▬▬▬▬▬▬▬ LEFT: FILTROS ▬▬▬▬▬▬▬▬▬ -->
    <left>
        <VBox spacing="12" style="-fx-background-color: #fafafa;">
            <padding>
                <Insets top="20" bottom="20" left="20" right="20"/>
            </padding>

            <Label text="Filtros" styleClass="label-subtitulo"/>

            <Label text="Fecha:"/>
            <DatePicker fx:id="filtroFecha"/>

            <Label text="Categoría:"/>
            <ComboBox fx:id="filtroCategoria"/>

            <Label text="Importe mínimo (€):"/>
            <TextField fx:id="filtroMin"/>

            <Label text="Importe máximo (€):"/>
            <TextField fx:id="filtroMax"/>

            <HBox spacing="10">
                <Button fx:id="btnFiltrar" text="Aplicar filtros" 
                        styleClass="button, boton-accion"
                        onAction="#onAplicarFiltros"
                        HBox.hgrow="ALWAYS"
                        maxWidth="Infinity"/>
                
                <Button fx:id="btnLimpiarFiltros" text="Limpiar filtros" 
                        styleClass="button, boton-secundario"
                        onAction="#onLimpiarFiltros"
                        HBox.hgrow="ALWAYS"
                        maxWidth="Infinity"/>
            </HBox>

        </VBox>
    </left>

    <!-- ▬▬▬▬▬▬▬▬▬ CENTER: TABLA ▬▬▬▬▬▬▬▬▬ -->
    <center>
        <TableView fx:id="tablaGastos">
            <columns>
                <TableColumn fx:id="colFecha" text="Fecha" prefWidth="120"/>
                <TableColumn fx:id="colCategoria" text="Categoría" prefWidth="120"/>
                <TableColumn fx:id="colDescripcion" text="Descripción" prefWidth="240"/>
                <TableColumn fx:id="colCantidad" text="Cantidad (€)" prefWidth="120"/>
            </columns>
        </TableView>
    </center>

    <!-- ▬▬▬▬▬▬▬▬▬ BOTTOM: BOTONES ▬▬▬▬▬▬▬▬▬ -->
    <bottom>
        <HBox spacing="15" alignment="CENTER_RIGHT" style="-fx-background-color: #f4f4f4;">
            <padding>
                <Insets top="15" bottom="15" left="20" right="20"/>
            </padding>

            <Button fx:id="btnAñadir" text="Añadir" 
                    styleClass="button, boton-accion"
                    onAction="#onNuevoGasto"/>
            <Button fx:id="btnEditar" text="Editar" 
                    styleClass="button, boton-info"
                    onAction="#onEditarGasto"/>
            <Button fx:id="btnEliminar" text="Eliminar" 
                    styleClass="button, boton-peligro"
                    onAction="#onEliminarGasto"/>
        </HBox>
    </bottom>

</BorderPane>