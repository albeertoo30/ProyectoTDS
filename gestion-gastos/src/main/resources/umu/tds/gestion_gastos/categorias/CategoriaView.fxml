<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" 
            fx:controller="umu.tds.gestion_gastos.vista.categoria.ControladorCategoriasView"
            stylesheets="@/umu/tds/gestion_gastos/estilos/app.css">

    <!-- ▬▬▬▬▬▬▬▬▬ TOP: TÍTULO ▬▬▬▬▬▬▬▬▬ -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10"
              style="-fx-background-color: #f4f4f4;">
            <Label text="Categorías" styleClass="label-titulo"/>
            <padding>
                <Insets top="20" bottom="20" left="20" right="20"/>
            </padding>
        </HBox>
    </top>

    <!-- ▬▬▬▬▬▬▬▬▬ CENTER: TABLA ▬▬▬▬▬▬▬▬▬ -->
    <center>
        <TableView fx:id="tablaCategorias">
            <columns>
                <TableColumn fx:id="colNombre"
                             text="Nombre"
                             prefWidth="200"/>
                <TableColumn fx:id="colDescripcion"
                             text="Descripción"
                             prefWidth="400"/>
            </columns>
        </TableView>
    </center>

    <!-- ▬▬▬▬▬▬▬▬▬ BOTTOM: BOTONES ▬▬▬▬▬▬▬▬▬ -->
    <bottom>
        <HBox spacing="15"
              alignment="CENTER_RIGHT"
              style="-fx-background-color: #f4f4f4;">
            <padding>
                <Insets top="15" bottom="15" left="20" right="20"/>
            </padding>

            <Button text="Añadir"
                    fx:id="btnAñadir"
                    styleClass="button, boton-accion"
                    onAction="#onAnadirCategoria"/>
            <Button text="Editar"
                    fx:id="btnEditar"
                    styleClass="button, boton-info"
                    onAction="#onEditarCategoria"/>
            <Button text="Eliminar"
                    fx:id="btnEliminar"
                    styleClass="button, boton-peligro"
                    onAction="#onEliminarCategoria"/>
        </HBox>
    </bottom>

</BorderPane>