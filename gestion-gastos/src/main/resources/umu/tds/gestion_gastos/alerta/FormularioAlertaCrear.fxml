<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="umu.tds.gestion_gastos.alerta.controlador.ControladorCrearAlerta" stylesheets="@../estilos/app.css">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Crear alerta" styleClass="label-titulo"/>

    <TextField fx:id="tfDescripcion" promptText="Descripción" />

    <TextField fx:id="tfLimite" promptText="Límite (€)" />

    <ComboBox fx:id="cbCategorias" promptText="Categoría (opcional)" />

    <ComboBox fx:id="cbTipo" promptText="Tipo de alerta" />

    <HBox spacing="10">
        <Button text="Crear" onAction="#onCrearAlerta" styleClass="boton-accion"/>
        <Button text="Cancelar" onAction="#onCancelar" styleClass="boton-peligro"/>
    </HBox>

</VBox>
