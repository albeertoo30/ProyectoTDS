<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="umu.tds.gestion_gastos.vista.cuenta.EstadisticasController"
            prefWidth="800" prefHeight="500">

    <top>
        <Label fx:id="lblTitulo" text="Estadísticas de la Cuenta" 
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 15; -fx-alignment: CENTER;"/>
    </top>

    <center>
        <HBox spacing="10" style="-fx-padding: 10;">
            <VBox HBox.hgrow="ALWAYS" alignment="CENTER" style="-fx-border-color: #dee2e6; -fx-border-width: 1;">
                <Label text="Gastos por Categoría" style="-fx-font-weight: bold; -fx-padding: 10;"/>
                <PieChart fx:id="graficoQueso" legendSide="BOTTOM"/>
            </VBox>

            <VBox HBox.hgrow="ALWAYS" alignment="CENTER" style="-fx-border-color: #dee2e6; -fx-border-width: 1;">
                <Label text="Gasto Total por Miembro" style="-fx-font-weight: bold; -fx-padding: 10;"/>
                <BarChart fx:id="graficoBarras" legendVisible="false">
                    <xAxis>
                        <CategoryAxis label="Miembro" />
                    </xAxis>
                    <yAxis>
                        <NumberAxis label="Euros (€)" />
                    </yAxis>
                </BarChart>
            </VBox>
        </HBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" style="-fx-padding: 10;">
            <Button text="Cerrar" onAction="#onCerrar"/>
        </HBox>
    </bottom>

</BorderPane>