<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="umu.tds.gestion_gastos.vista.cuenta.FormularioCuentaController"
            stylesheets="@../estilos/app.css">

    <top>
        <VBox style="-fx-padding: 15; -fx-background-color: #e9ecef;">
            <Label text="Crear / Editar Cuenta" styleClass="label-titulo" />
        </VBox>
    </top>

    <center>
        <GridPane hgap="15" vgap="15">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <children>
                <Label text="Nombre de la Cuenta:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <TextField fx:id="campoNombre" promptText="Ej: Viaje a Roma" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Tipo:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <ComboBox fx:id="comboTipo" GridPane.rowIndex="1" GridPane.columnIndex="1" maxWidth="Infinity"/>

                <Label text="Invitar Amigos:" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.valignment="TOP" style="-fx-font-weight: bold;"/>
                <ListView fx:id="listaUsuarios" GridPane.rowIndex="2" GridPane.columnIndex="1" prefHeight="150"/>

                <Label text="Nuevo Amigo:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <HBox spacing="10" GridPane.rowIndex="3" GridPane.columnIndex="1" fx:id="boxNuevoUsuario">
                    <TextField fx:id="campoNuevoUsuario" promptText="Nombre..." HBox.hgrow="ALWAYS"/>
                    <Button text="Añadir" onAction="#onAgregarUsuario" styleClass="boton-info"/>
                </HBox>
                
                <Label text="(Mantén CTRL o CMD para seleccionar varios)" 
                       style="-fx-font-size: 11px; -fx-text-fill: #666;"
                       GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            </children>
        </GridPane>
    </center>

    <bottom>
        <HBox spacing="15" alignment="CENTER_RIGHT">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <style>
                -fx-border-color: #dee2e6;
                -fx-border-width: 1 0 0 0;
            </style>
            
            <Button fx:id="btnCancelar" text="Cancelar" onAction="#onCancelar" styleClass="boton-peligro"/>
            
            <Button fx:id="btnGuardar" text="Guardar" onAction="#onGuardar" styleClass="boton-accion"/>
        </HBox>
    </bottom>

</BorderPane>